source 'http://rubygems.org'

gem 'rails', '~> 3.1.0'
gem 'rake'
gem 'mysql2', '~> 0.3.10'
gem 'will_paginate'
gem 'cancan'

# Needed for the new asset pipeline
group :assets do
  gem 'sass-rails'
  gem 'coffee-rails'
  gem 'uglifier'
end
 
# jQuery is the default JavaScript library in Rails 3.1
gem 'jquery-rails'

group :development, :test do
  gem "mocha"
  gem "rspec-rails"
  gem "factory_girl_rails"
end

