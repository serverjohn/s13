<h1>Edit Worked With Type</h1>

<div class="form">
  <%= form_for(@worked_with_type) do |f| %>
    <%= render "shared/error_messages", :target => @worked_with_type %>

    <h2>
      <%= f.label :name %></h2>
    <div>
      <%= f.text_field :name %>
    </div>

    <h2><%= f.label :active %></h2>
    <div>
      <%= f.radio_button :active, 'Y', :checked => true %> 
      <%= label :active_y, 'Yes' %>
    </div>
    <div>
      <%= f.radio_button :active, 'N' %>
      <%= label :contactmethod_n, 'No' %>
    </div>

    <%= f.submit 'Save' %>

  <% end %>
</div>