<h1>New territory</h1>

<div class="form">
  <%= form_for @territory, :html => {:multipart => true} do |f| %>
    <%= render "shared/error_messages", :target => @territory %>

    <h2><%= f.label :name %></h2>
    <div><%= f.text_field :name %></div>

    <h2><%= f.label :territory_type_id, "Territory Type" %></h2>
    <div><%= f.select :territory_type_id, options_for_select(territory_types) %></div>

    <h2><%= f.label :description %></h2>
    <div><%= f.text_field :description %></div>

    <h2><%= f.label :maps %></h2>
    <div><%= f.file_field :maps %></div>

    <h2><%= f.label :notes %></h2>
    <div><%= f.text_field :notes %></div>

    <%= f.hidden_field(:user_id, :value => current_user.id ) %>
    <%= f.hidden_field(:congregation_id, :value => current_user.congregation_id ) %>
  	<%= f.hidden_field :active, :value => "Y"%>

    <%= f.submit 'Create' %>
  <% end %>
</div>