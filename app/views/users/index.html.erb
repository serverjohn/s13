<h1>Users List</h1>

<table>
  <tr>
    <th>User name</th>
    <th>First name</th>
    <th>Last name</th>
    <th>Email</th>
    <th>Role</th>
    <th>Active</th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.username %></td>
    <td><%= user.first_name %></td>
    <td><%= user.last_name %></td>
    <td><%= user.email %></td>
    <td><%= user.role %></td>
    <td><% if user.active == "Y" %>Yes<% else %>No<% end %></td>
    <td><%= link_to 'Show', user %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= link_to 'Disable', ur_disable_path(user), :data => {:confirm => "Are you sure you want to disable #{user.username.titleize}?"} %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New user', new_user_path %>
