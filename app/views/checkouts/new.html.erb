<h1>New checkout</h1>

<% form_for(@checkout) do |f| %>
  <%= f.error_messages %>
  
  	<!-- user_id Needs to be set to user_id -->
	<%= f.hidden_field(:user_id, :value => "1") %>
	<%= f.hidden_field(:completed_with, :value => nil) %>

  <p>
    <%= f.label :territory_id %><br />
    <%= f.select :territory_id, options_for_select(@territories) %>
  </p>
  <p>
    <%= f.label :publisher_id %><br />
    <%= f.select :publisher_id, options_for_select(@publisher_list) %>
  </p>
  <p>
    <%= f.label :checked_out %><br />
    <%= f.date_select :checked_out, :start_year => Time.now.year, :end_year => Time.now.year - 2 %>
  </p>

  <p>
    <%= f.label :notes %><br />
    <%= f.text_field :notes %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', checkouts_path %>